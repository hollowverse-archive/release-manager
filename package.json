{
  "name": "release-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Release Manager provides cookie-based traffic splitting for hollowverse.com",
  "repository": "https://github.com/hollowverse/release-manager.git",
  "scripts": {
    "test": "jest --colors",
    "pretest": "run-p -l --aggregate-output validate-filenames lint-js lint-ts check-ts",
    "lint-js": "eslint '**/*.js{,x}'",
    "lint-ts": "tslint './*.ts' 'src/**/*.ts{,x}' --project .",
    "dev": "PORT=${RELEASE_MANAGER_PORT:-8082} node --inspect=0.0.0.0:${RELEASE_MANAGER_DEBUG_PORT:-9228} -r 'ts-node/register' src/releaseManager.ts",
    "dev:watch": "nodemon --watch ./src --ext ts,tsx,json --exec yarn dev",
    "check-ts": "tsc --project ./src --noEmit",
    "build": "tsc --project ./src",
    "clean": "rm -rf ./dist",
    "start": "node dist/releaseManager.js",
    "validate-filenames": "validate-filenames --config commonconfig.js",
    "lint-staged": "lint-staged"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "license": "Unlicense",
  "homepage": "https://github.com/hollowverse/release-manager#readme",
  "lint-staged": {
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p --aggregate-output validate-filenames lint-staged",
      "pre-push": "yarn pretest",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.117.0",
    "chance": "^1.0.11",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "helmet": "^3.9.0",
    "http-proxy": "^1.16.2",
    "is-bot": "^0.0.1",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "shelljs": "^0.7.8",
    "weighted": "^0.3.0"
  },
  "devDependencies": {
    "@hollowverse/common": "^3.2.5",
    "@hollowverse/validate-filenames": "^1.3.8",
    "@types/bluebird": "^3.5.20",
    "@types/chance": "^0.7.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.0.36",
    "@types/helmet": "^0.0.37",
    "@types/http-proxy": "^1.12.0",
    "@types/jest": "^22.2.0",
    "@types/lodash": "^4.14.68",
    "@types/node": "^8.0.8",
    "@types/query-string": "^4.3.1",
    "@types/shelljs": "^0.7.2",
    "@types/supertest": "^2.0.4",
    "@types/weighted": "^0.0.5",
    "babel-eslint": "^8.2.2",
    "bluebird": "^3.5.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.11.1",
    "rxjs-tslint-rules": "^3.15.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^1.0.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-loader": "^3.5.3",
    "tslint-microsoft-contrib": "^5.0.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0",
    "yarnhook": "^0.1.1"
  },
  "engines": {
    "node": ">= 9.2"
  }
}
